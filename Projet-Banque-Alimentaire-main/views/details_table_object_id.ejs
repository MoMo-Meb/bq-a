<!DOCTYPE html>
<html lang="en">


<%- include('./partials/newhead'); %>

    <body>
        <%- include('./partials/newHeader'); %>
            <section class="global-page-header">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="block">
                                <h2>Détails familiales : </h2>
                                <ol class="breadcrumb list-inline text-center">
                                    <li class="list-inline-item">
                                        <a href="/">
                                            <i class="ion-ios-home"></i>
                                            Accueil &nbsp; &nbsp;/
                                        </a>
                                    </li>
                                    <li class="active list-inline-item">Détails familiales</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <div>
                <h1>Bonjour</h1>
                <h2>Membre principal</h2>
                <table id="originalTable" class="table table-striped table-hover mx-auto professional-style">

                    <thead>
                        <tr>

                            <input type="hidden" name="table" value="<%=table%>" />
                            <% for (let i=0; i < columns.length; i++) { %>
                                <% if (columns[i].Field.includes('Id')) { %>

                                    <th>
                                        <%= columns[i].Field %>
                                    </th>
                                    <%}else{%>
                                        <th>
                                            <%= columns[i].Field %>
                                        </th>
                                        <%}%>
                                            <%}%>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i=0; i < data.length; i++) { %>
                            <tr>
                                <% for (let j=0; j < columns.length; j++) { %>
                                    <td>
                                        <% if (columns[j].Type.includes('varchar') || columns[j].Type.includes('text'))
                                            { %>
                                    <td class="editable" data-column-name="<%=columns[j]%>">
                                        <%=data[i]%>
                                    </td>
                                    <% } else if (columns[i].Type.includes('int')) { %>

                                        <td class="editable" data-column-name="<%=columns[j]%>">
                                            <%=data[i]%>
                                        </td>
                                        <% } else if (columns[i].Type.includes('float') ||
                                            columns[i].Type.includes('double')) { %>

                                            <td class="editable" data-column-name="<%=columns[j]%>">
                                                <%=data[i]%>
                                            </td>
                                            <% } else if (columns[i].Type.includes('date')) { %>

                                                <td class="editable" data-column-name="<%=columns[j]%>">
                                                    <%=data[i]%>
                                                </td>
                                                <% } else if (columns[i].Type.includes('enum')) { %>

                                                    <td class="editable" data-column-name="<%=columns[j]%>">
                                                        <%=data[i]%>
                                                    </td>

                                                    <% } %>

                                                        </td>
                                                        <%}%>

                                                            <td>
                                                                <button>Edit</button>
                                                            </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>


            </div>
            <%- include('./partials/contactme'); %>
                <%- include('./partials/newFooter'); %>
    </body>

</html>